<h1>Episode</h1>

<h3><%= "Date: #{@episode.date}" %></h3>

<h3>Guests</h3>



<ul>
  <%if @episode.guests.empty?%>
  <li><%= "No guests so far.."%></li>
  <% else %>

    <% @episode.guests.each do |guest| %>
    <li><%= link_to guest.name, guest %></li>
    <% end %>
  <% end %>
</ul>

<%= link_to 'Back to all', episodes_path %></li>
